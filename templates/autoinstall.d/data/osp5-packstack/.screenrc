escape ^Zz
autodetach on

startup_message off

defscrollback 5000

vbell off
vbell_msg off

hardstatus ignore "#%n %t | %h"
caption always "%?%F%{= kw}%:%{= wK}%?%-w%?%F%{=b bW}%:%{= Wk}%?%n %t%{-}%+w"
#caption always "%?%F%{= wg}%:%{= ww}%? %-w%{=bu dr}%n %t%{-}%+w %= %?%F%{=b .b}%:%{..}%?%y/%m/%d(%D) %?%F%{wm}%:%{..}%?%c"

shell zsh
bind w windowlist -b
bind ^h focus left
bind ^j focus down
bind ^k focus up
bind ^l focus right
